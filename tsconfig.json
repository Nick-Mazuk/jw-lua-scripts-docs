{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2018",
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "paths": {
            "$app/*": [".svelte/dev/runtime/app/*", ".svelte/build/runtime/app/*"],
            "$lib/*": ["src/lib"]
        },
        "strict": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.svelte",
        "cli/**/*.ts",
        "types.d.ts",
        "@nick-mazuk/lib/**/*.js",
        "@nick-mazuk/lib/**/*.ts"
    ],
    "exclude": ["src/lib/lib/stork.js"]
}
